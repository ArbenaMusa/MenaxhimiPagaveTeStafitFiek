#adminBonusCreateModal.modal.fade(data-backdrop="static" tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
    .modal-dialog(role='document')
        .modal-content
            .modal-header
                h5#exampleModalLabel.modal-title Bonus
                button.close(type='button' data-dismiss='modal' aria-label='Close')
                    span.modal-title(aria-hidden='true') &times;
            .modal-body
                form(action='/createBonus' method='POST')
                    .row
                        .col
                            label(for='user_id') UserID
                            input.form-control(type='text' name='user_id')
                    .row
                        .col
                            label(for='oretShtese') Orët shtesë
                            input.form-control(type='text' name='extra_hours')
                        .col
                            label(for='pagesaPerOreShtese') Pagesa për orët shtesë
                            input.form-control(type='text' name='price_extra_hours')
                    .row
                        .col
                            label(for='orePuneNeJave') Orë pune në javë
                            input.form-control(type='text' name='work_hours')
                        .col
                            label(for='pagesaPerOrePune') Pagesa për orë pune
                            input.form-control(type='text' name='price_work_hours')
                    .row
                        .col
                            label(for='temeDiplome') Temë diplome
                            input.form-control(type='text' name='bachelor_thesis')
                        .col
                            label(for='pagesaPerTemeDiplome') Pagesa për temë diplome
                            input.form-control(type='text' name='price_bachelor_thesis')
                    .row
                        .col
                            label(for='diplomeMaster') Provime master
                            input.form-control(type='text' name='master_thesis')
                        .col
                            label(for='pagesaPerDiplomeMaster') Pagesa për provime master
                            input.form-control(type='text' name='price_master_thesis')        
                    .row
                        .col
                            label(for='provimeMaster') Provime master
                            input.form-control(type='text' name='master_exam')
                        .col
                            label(for='pagesaPerProvimeMaster') Pagesa për provime master
                            input.form-control(type='text' name='price_master_exam')
                    .modal-footer
                        button.btn#bonSave(type='Submit' style='background-color:#980709; color:white') Save
                        button.btn(type='button' data-dismiss='modal' style='background-color:#980709; color:white') Close