block content
  if role === '1'
    .container-fluid(style='padding: 0')
      nav.navbar.navbar-custom
        .navinner
          p SEMP 
        .navinner
          p
            a(href="/logout") Logout 
      .container
        .row
          .col-sm-2
            include user/user-nav-menu
          .col-sm-10
            include user/user-tabs
  else 
    - var pagat = [3, 4, 5]
    .container-fluid(style='padding: 0')
      nav.navbar.navbar-custom
        .navinner
          p SEMP 
        .navinner
          p
            a(href="/logout") Logout   
      .container
        .row
          .col-sm-2
            include admin/admin-nav-menu
          .col-sm-10
            include admin/admin-tabs
      include admin/admin-user-create-modal
      include admin/admin-contract-create-modal
      include admin/admin-bonus-create-modal
      include admin/admin-diskuto-modal
